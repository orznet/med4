{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Archivo de evaluaciones recibidas en periodos de evaluaci√≥n anteriores</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cedula</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Vinculacion</th>
                <th>Sigla</th>
                <th>Centro</th>
                <th>Zona</th>
                <th>Periodo</th>
                <th>Final</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('archivo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.cedula }}</td>
                <td>{{ entity.nombres }}</td>
                <td>{{ entity.apellidos }}</td>
                <td>{{ entity.vinculacion }}</td>
                <td>{{ entity.sigla }}</td>
                <td>{{ entity.centro }}</td>
                <td>{{ entity.zona }}</td>
                <td>{{ entity.periodo }}</td>
                <td>{{ entity.final }}</td>
                <td>
                <a href="{{ path('archivo_show', { 'id': entity.id }) }}">show</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('archivo_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
