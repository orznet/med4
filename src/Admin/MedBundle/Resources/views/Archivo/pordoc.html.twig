{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Archivo de evaluaciones recibidas en periodos anteriores</h1>

    <table class="table table-bordered table-striped hidden-mobile" style="width: 95%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Cedula</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Vinculacion</th>
                <th>Escuela</th>
                <th>Centro</th>
                <th>Zona</th>
                <th>Periodo</th>
                <th>Final</th>
                <th>Informe</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('archivo_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.cedula }}</td>
                <td>{{ entity.nombres }}</td>
                <td>{{ entity.apellidos }}</td>
                <td>{{ entity.vinculacion }}</td>
                <td>{{ entity.sigla }}</td>
                <td>{{ entity.centro }}</td>
                <td>{{ entity.zona }}</td>
                <td>{{ entity.periodo }}</td>
                <td>{{ entity.final|number_format(1, '.', ',') }}</td>
                <td>
                    <a href="javascript:popUp('{{ path('docente_final', {'id': entity.id }) }}')" class="btn btn-primary btn-xs">Ver... <i class="fa fa-sign-in"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

 <script>

function popUp(URL) {

    if(typeof(popupWin) != "object" || popupWin.closed)  {
        popupWin = window.open(URL, 'popupWin', 'scrollbars=auto,toolbar=no,menubar=no,status=no,width=1000,height=600, left=100,top=100');
    }
    else{
        popupWin.location.href = URL;
    }
    popupWin.focus();
 }
</script>
    {% endblock %}
