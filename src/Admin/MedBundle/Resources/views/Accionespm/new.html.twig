{% block body -%}
               <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times</button>
            <h4 class="modal-title">Agregar Acción</h4>
            </div>			<!-- /modal-header -->
            <div class="modal-body">          
   <form  action="{{ path('accionespm_create') }}" method="post" {{ form_start(form) }}
   <table class="table table-bordered table-striped hidden-mobile">
   <input type="hidden" name="_method" value="POST" />
     {{ form_errors(form) }}
   <div style="display:none;">
    {{ form_widget(form.plan) }}
   
   </div>
  <tr>
    <td>Oportunidad</td>
    <td>{{ form_widget(form.oportunidad) }}</td>
  </tr>

  <tr>
    <td>Acción</td>
    <td>{{ form_widget(form.accion) }}</td>
  </tr>
  <tr>
    <td>Enviar</td>
    <td>  <button type="hidden" class="btn btn-sm btn-primary">Guardar</button></td>
  </tr>
  {{ form_widget(form._token) }}
  </table>
     
</form>
{% endblock %}
