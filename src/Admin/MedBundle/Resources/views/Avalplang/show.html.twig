{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Avalplang</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Perfil</th>
                <td>{{ entity.perfil }}</td>
            </tr>
            <tr>
                <th>Observaciones</th>
                <td>{{ entity.observaciones }}</td>
            </tr>
            <tr>
                <th>Fecha_aval</th>
                <td>{{ entity.fechaaval|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Avalado</th>
                <td>{{ entity.avalado }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('avalplang') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('avalplang_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
