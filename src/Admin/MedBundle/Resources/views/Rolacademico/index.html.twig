{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Roles Académicos</h1>

    <table class="table table-bordered table-striped hidden-mobile" style="width: 95%">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nombre</th>
                <th>Categoría</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('rolacademico_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.nombre }}</td>
                <td>{{ entity.categoria }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% if is_granted('ROLE_ADMIN') %}   
        <ul>
        <li>
            <a href="{{ path('rolacademico_new') }}">
                Nuevo
            </a>
        </li>
    </ul>
    
   {%endif%}
    {% endblock %}
