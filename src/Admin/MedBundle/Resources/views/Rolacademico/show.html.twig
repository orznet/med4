{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Rol Académico</h1>

    <table class="table table-bordered table-striped hidden-mobile" style="width: 95%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Categoria</th>
                <td>{{ entity.categoria }}</td>
            </tr>
        </tbody>
    </table>
{% if is_granted('ROLE_ADMIN') %}   
        <ul class="record_actions">
    <li>
        <a href="{{ path('rolacademico') }}">
            Regresar
        </a>
    </li>
    <li>
        <a href="{{ path('rolacademico_edit', { 'id': entity.id }) }}">
            Editar
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
 {%endif%}
  <table class="table table-bordered table-striped hidden-mobile" style="width: 95%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Responsabilidad</th>
                <th>Descripción</th>

            </tr>
        </thead>
        <tbody>
        {% for entity in entity.actividades %}
            <tr>
                <td><a href="{{ path('actividadrol_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.responsabilidad? entity.responsabilidad.nombre : ' ' }}</td>
                <td>{{ entity.descripcion }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>   
    
{% endblock %}
