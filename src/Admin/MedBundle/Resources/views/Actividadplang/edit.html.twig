		  {% block body -%}
		            <div class="modal-header">
		            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times</button>
		            <h4 class="modal-title">Autoevaluación</h4>
		            </div>			<!-- /modal-header -->
		            <div class="modal-body">          
		   <form  action="{{ path('actividadplang_update', { 'id': entity.id }) }}" method="post" {{ form_start(edit_form) }}
		   <table class="table table-bordered table-striped hidden-mobile">
		   <input type="hidden" name="_method" value="PUT" />
                   <tr>
                       <td colspan="2">
                       <font color="#F87217">{{ form_errors(edit_form) }}</font>
                       </td>    
                   </tr> 
		   <tr>
		    <td>Actividad</td>
		    <td>{{ entity.actividad.descripcion }}</td>
		    </tr>
		   <tr>
		    <td>Descripción del avance</td>
		    <td>
		     {{ form_widget(edit_form.observaciones) }} {{ form_errors(edit_form.observaciones) }}
		    </td>
		  </tr>
                   <tr>
		    <td>Evidencia</td>
		    <td>
		     {{ form_widget(edit_form.file) }} {{ form_errors(edit_form.file) }}
                        <font color="#F87217">Si lo requiere adjunte un archivo, únicamente Archivos PDF o ZIP de máximo 4MB de tamaño</font>
		    </td>
		  </tr>
                    <tr>    
		    <td colspan="2">Importante: Si considera no autoevaluarse con esta actividad seleccione la opción “No Aplica”  y en el campo “Descripción del avance” escriba una breve justificación. </td>
		    </tr> 
		     <tr>
		    <td>Autoevaluación</td>
		    <td>
		     {{ form_widget(edit_form.autoevaluacion) }}
		    </td>
		  </tr>
		  <tr>
		      <td></td>
		      <td><button type="hidden" class="btn btn-lg btn-primary">Enviar</button></td>
		  </tr>
		  {{ form_widget(edit_form._token) }}
		  </table>
		</form>
		{% endblock %}