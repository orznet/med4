{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Centro</h1>

    <table class="table table-bordered table-striped hidden-mobile" style="width: 95%">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Nombre</th>
                <td>{{ entity.nombre }}</td>
            </tr>
            <tr>
                <th>Tipo</th>
                <td>{{ entity.tipo }}</td>
            </tr>
            <tr>
                <th>Zona</th>
                <td>{{ entity.zona.nombre }}</td>
            </tr>
           <tr>
                <th>Cedula Director</th>
                <td>{{ entity.director.id }}</td>
            </tr>
            <tr>
                <th>Director</th>
                <td>{{ entity.director.nombres }} {{ entity.director.apellidos }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('centro') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('centro_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
