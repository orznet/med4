{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Docentes</h1>

    <table class="table table-bordered table-striped hidden-mobile" style="width: 95%">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombres</th>
                <th>Apellidos</th>
                <th>Modalidad</th>
                <th>Vinculacion</th>
                <th>Escuela</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('docente_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{entity.user.nombres}}</td>
                <td>{{entity.user.apellidos}}</td>
                <td>{{ entity.modalidad }}</td>
                <td>{{ entity.vinculacion }}</td>
                <td>{{entity.escuela.sigla}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
        {{ dump(entities) }}
   {% endblock %}
