        <tbody>
          <tr>
              <th>ID</th>
              <th>Cédula</th>
                <th>Nombre</th>
                <th>Centro</th>
            </tr>
        {%for tutor in oferta.tutores %}
            <tr>
                <td>{{tutor.docente.id}}</td>
                <td>{{tutor.docente.user.id}}</td>
                <td>{{tutor.docente.user.nombres}} {{tutor.docente.user.apellidos}}</td>
                <td>{{tutor.docente.centro.nombre}}</td>
            </tr>
        {%endfor%}
           
        </tbody>
        </table>
         {%endfor%}